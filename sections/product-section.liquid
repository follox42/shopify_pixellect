{% comment %}
  featured-product.liquid - Section de mise en avant d'un produit avec design amélioré
{% endcomment %}
{{ 'product-section.css' | asset_url | stylesheet_tag }}

<div class="featured-product">
  <div class="featured-product__container">
    {% assign product = all_products[section.settings.product] %}
    
    <div class="featured-product__media">
      <img 
        class="featured-product__image"
        src="{{ 'console.png' | asset_url }}" 
        alt="Console rétro custom pixel"
        loading="lazy"
        width="100%"
        height="auto"
      >
    </div>
    
    <div class="featured-product__details">
      <h2 class="featured-product__title">All products</h2>
      
      <div class="featured-product__price">
        <p>Text</p>
      </div>
      
      <div class="featured-product__actions">
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="featured-product__button">
          <span class="featured-product__button-text">{{ section.settings.button_text }}</span>
          <span class="featured-product__button-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Product",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select a product"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View product"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "category": "Custom"
    }
  ]
}
{% endschema %}