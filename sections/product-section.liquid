{% comment %}
  featured-product.liquid - Section de mise en avant d'un produit avec design amélioré
{% endcomment %}

<div class="featured-product">
  <div class="featured-product__container">
    {% assign product = all_products[section.settings.product] %}
    
    <div class="featured-product__media">
      {% if product.featured_media != blank %}
        <img 
          src="{{ product.featured_media | img_url: 'large' }}" 
          alt="{{ product.featured_media.alt | default: product.title }}" 
          class="featured-product__image"
          loading="lazy"
          width="{{ product.featured_media.width }}"
          height="{{ product.featured_media.height }}"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'featured-product__placeholder' }}
      {% endif %}
    </div>
    
    <div class="featured-product__details">
      <h2 class="featured-product__title">{{ product.title | default: section.settings.fallback_title }}</h2>
      
      <div class="featured-product__price">
        {% if product.price > 0 %}
          {{ product.price | money }}
        {% else %}
          {{ section.settings.fallback_price | money }}
        {% endif %}
      </div>
      
      <div class="featured-product__actions">
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="featured-product__button">
          <span class="featured-product__button-text">{{ section.settings.button_text }}</span>
          <span class="featured-product__button-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>

{% style %}
.featured-product {
  padding: 40px 0;
  width: 100%;
}

.featured-product__container {
  display: flex;
  align-items: center;
  max-width: 1280px;
  margin: 0 auto;
  padding: 36px;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  gap: 40px;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(50px);
  -webkit-backdrop-filter: blur(50px);
  border: 1px solid rgba(0, 0, 0, 0.45);
}

.featured-product__container::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.2), transparent);
  z-index: 1;
  pointer-events: none;
}

.featured-product__media {
  flex: 1;
  max-width: 45%;
  position: relative;
  z-index: 2;
  transform: perspective(800px) rotateY(-5deg);
  transition: transform 0.5s ease;
}

.featured-product__media:hover {
  transform: perspective(800px) rotateY(0deg);
}

.featured-product__image {
  max-width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
}

.featured-product__placeholder {
  width: 100%;
  height: auto;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
}

.featured-product__details {
  flex: 1;
  position: relative;
  z-index: 2;
}

.featured-product__title {
  color: #fff;
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 15px;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.featured-product__price {
  color: #fff;
  font-size: 32px;
  font-weight: 600;
  margin-bottom: 30px;
  opacity: 0.9;
}

.featured-product__button {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.1);
  color: #fff;
  padding: 16px 24px;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  width: 100%;
  max-width: 280px;
  transition: all 0.3s ease;
  text-decoration: none;
}

.featured-product__button:hover {
  background-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.featured-product__button-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.featured-product__button:hover .featured-product__button-icon {
  transform: translateX(4px);
}

@media screen and (max-width: 991px) {
  .featured-product__container {
    flex-direction: column;
    padding: 30px;
  }
  
  .featured-product__media {
    max-width: 100%;
    margin-bottom: 30px;
    transform: none;
  }
  
  .featured-product__title {
    font-size: 28px;
    text-align: center;
  }
  
  .featured-product__price {
    font-size: 26px;
    text-align: center;
  }
  
  .featured-product__button {
    margin: 0 auto;
  }
}

@media screen and (max-width: 767px) {
  .featured-product__container {
    padding: 24px;
  }
}
{% endstyle %}

{% schema %}
{
  "name": "Featured Product",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Produit"
    },
    {
      "type": "text",
      "id": "fallback_title",
      "label": "Titre de secours",
      "default": "Console rétro custom"
    },
    {
      "type": "text",
      "id": "fallback_price",
      "label": "Prix de secours",
      "default": "129.00"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "Voir les produits"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "category": "Product"
    }
  ]
}
{% endschema %}