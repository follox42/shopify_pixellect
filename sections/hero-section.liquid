{{ 'hero-section.css' | asset_url | stylesheet_tag }}
<div class="hero">
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">Créez n'importe quelle expérience commerciale</h1>
      <p class="hero__description">
        Composez, personnalisez et étendez chaque partie de la pièce commerciale, pixel par pixel.
      </p>
      <a href="/collections/all" class="hero__button">Voir les produits</a>
    </div>
        
    <div class="hero__image-container">
      <div class="hero__image-wrapper">
        <!-- Image d'arrière-plan avec fondu multiple -->
        <img 
          src="{{ 'pixel-building-background.png' | asset_url }}" 
          alt="Bâtiment pixel art fond" 
          class="hero__image__background" 
          loading="eager"
        >
        
        <!-- Image principale avec fondu multiple -->
        <img 
          src="{{ 'pixel-building.png' | asset_url }}" 
          alt="Bâtiment pixel art" 
          class="hero__image" 
          loading="eager"
        >
        
        <!-- Ajout d'effets lumineux subtils -->
        <div class="hero__glow-effect"></div>
      </div>
    </div>
  </div>
</div>