{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<div class="hero">
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">{{ 'main.hero-section.title' | t }}</h1>
      <p class="hero__description">
        {{ 'main.hero-section.description' | t }}
      </p>
      <a href="/collections/all" class="hero__button">{{ 'main.hero-section.button' | t }}</a>
    </div>
        
    <div class="hero__image-container">
      <div class="hero__image-wrapper">
        <!-- Background image with multiple fades -->
        <img 
          src="{{ 'pixel-building-background.webp' | asset_url }}" 
          alt="Pixel art building background" 
          class="hero__image__background" 
          width="110%"
          height="auto"
          loading="eager"
          decoding="async"
        >
        
        <!-- Main image with layered fades -->
        <img 
          src="{{ 'pixel-building.webp' | asset_url }}" 
          alt="Pixel art building" 
          class="hero__image" 
          width="100%"
          height="auto"
          loading="eager"
          decoding="async"
        >
        
        <!-- Subtle light glow effects -->
        <div class="hero__glow-effect"></div>
      </div>
    </div>
  </div>
</div>
