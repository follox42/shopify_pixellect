{% comment %}
  level-up-section.liquid - Section de présentation "Level up your space"
{% endcomment %}

{{ 'level-up.css' | asset_url | stylesheet_tag }}

<div class="level-up">
  <div class="level-up__container">
    <div class="level-up__content">
      <h2 class="level-up__title">{{ 'main.level-up.title' | t }}</h2>
      <div class="level-up__description">
        {{ 'main.level-up.description' | t }}
      </div>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="level-up__button">
          <span class="level-up__button-text">{{ 'main.level-up.button' | t }}</span>
          <span class="level-up__button-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </a>
      {% endif %}
    </div>
    
    <div class="level-up__image-container">
        <img 
          src="{{ 'desk.png' | asset_url }}" 
          class="level-up__image"
          loading="lazy"
          width="100%"
          height="auto"
        >
      <div class="level-up__image-glow"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Level Up Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Level up your space"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Ornez votre espace de créations en pixel uniques. Nos produits apportent une touche nostalgique et élégante à votre intérieur ou espace de travail.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "Découvrir nos créations"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Level Up Section",
      "category": "Feature"
    }
  ]
}
{% endschema %}