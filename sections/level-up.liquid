{% comment %}
  level-up-section.liquid - Section de présentation "Level up your space"
{% endcomment %}

<div class="level-up">
  <div class="level-up__container">
    <div class="level-up__content">
      <h2 class="level-up__title">{{ section.settings.title }}</h2>
      <div class="level-up__description">
        {{ section.settings.description }}
      </div>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="level-up__button">
          <span class="level-up__button-text">{{ section.settings.button_label }}</span>
          <span class="level-up__button-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </a>
      {% endif %}
    </div>
    
    <div class="level-up__image-container">
      {% if section.settings.image != blank %}
        <img 
          src="{{ section.settings.image | img_url: 'master' }}" 
          alt="{{ section.settings.image.alt | default: section.settings.title }}" 
          class="level-up__image"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      {% endif %}
      <div class="level-up__image-glow"></div>
    </div>
  </div>
</div>

{% style %}
.level-up {
  padding: 80px 0;
  width: 100%;
  position: relative;
  overflow: hidden;
}

.level-up__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 24px;
  gap: 40px;
  position: relative;
  z-index: 2;
}

.level-up__content {
  flex: 1;
  max-width: 540px;
  position: relative;
}

.level-up__title {
  color: #fff;
  font-size: 54px;
  line-height: 1.1;
  font-weight: 700;
  margin-bottom: 24px;
  background: linear-gradient(90deg, #fff, rgba(255, 255, 255, 0.8));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  position: relative;
}

.level-up__title::after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.2));
  border-radius: 3px;
}

.level-up__description {
  color: rgba(255, 255, 255, 0.8);
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 32px;
}

.level-up__button {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.1);
  color: #fff;
  padding: 16px 28px;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.3s ease;
  gap: 16px;
  position: relative;
  overflow: hidden;
}

.level-up__button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.8s ease;
}

.level-up__button:hover {
  background-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.level-up__button:hover::before {
  left: 100%;
}

.level-up__button-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.level-up__button:hover .level-up__button-icon {
  transform: translateX(4px);
}

.level-up__image-container {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: flex-end;
  max-width: 550px;
  transform: perspective(1000px) rotateY(-5deg) translateZ(20px);
  transition: transform 0.5s ease;
}

.level-up__image-container:hover {
  transform: perspective(1000px) rotateY(0) translateZ(30px);
}

.level-up__image {
  max-width: 100%;
  height: auto;
  object-fit: contain;
  border-radius: 8px;
  position: relative;
  z-index: 2;
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
}

.level-up__image-glow {
  position: absolute;
  bottom: -20px;
  right: -20px;
  width: 80%;
  height: 60%;
  background: radial-gradient(circle, rgba(0, 255, 170, 0.15) 0%, rgba(0, 255, 170, 0.05) 50%, rgba(0, 255, 170, 0) 70%);
  filter: blur(20px);
  pointer-events: none;
  z-index: 1;
}

@media screen and (max-width: 991px) {
  .level-up__container {
    flex-direction: column-reverse;
    text-align: center;
  }
  
  .level-up__content {
    max-width: 100%;
  }
  
  .level-up__image-container {
    justify-content: center;
    max-width: 90%;
    margin-bottom: 40px;
    transform: none;
  }
  
  .level-up__image-container:hover {
    transform: none;
  }
  
  .level-up__title {
    font-size: 42px;
  }
  
  .level-up__title::after {
    left: 50%;
    transform: translateX(-50%);
  }
  
  .level-up__button {
    margin: 0 auto;
  }
}

@media screen and (max-width: 767px) {
  .level-up {
    padding: 60px 0;
  }
  
  .level-up__title {
    font-size: 36px;
  }
  
  .level-up__description {
    font-size: 16px;
  }
}

@media (prefers-reduced-motion: reduce) {
  .level-up__button::before,
  .level-up__button-icon,
  .level-up__image-container {
    transition: none;
  }
}
{% endstyle %}

{% schema %}
{
  "name": "Level Up Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Level up your space"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Ornez votre espace de créations en pixel uniques. Nos produits apportent une touche nostalgique et élégante à votre intérieur ou espace de travail.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "Découvrir nos créations"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Level Up Section",
      "category": "Feature"
    }
  ]
}
{% endschema %}