      <ul class="footer__menu">
        {% if shop.privacy_policy %}
          <li class="footer__menu-item">
            <a href="{{ shop.privacy_policy.url }}" class="footer__menu-link">
              {{ 'footer.privacy-policy' | t }}
            </a>
          </li>
        {% endif %}
        
        {% if shop.refund_policy %}
          <li class="footer__menu-item">
            <a href="{{ shop.refund_policy.url }}" class="footer__menu-link">
              {{ 'refund-policy' | t }}
            </a>
          </li>
        {% endif %}
        
        {% if shop.terms_of_service %}
          <li class="footer__menu-item">
            <a href="{{ shop.terms_of_service.url }}" class="footer__menu-link">
              {{ 'terms-of-service' | t }}
            </a>
          </li>
        {% endif %}
        
        <li class="footer__menu-item">
          <a href="/pages/contact" class="footer__menu-link">
            {{ 'footer.contact' | t }}
          </a>
        </li>
      </ul>
    </div>
    
    <!-- Newsletter -->
    <div class="footer__column footer__newsletter footer-animate" data-delay="200">
      {% if section.settings.show_newsletter %}
      <h3 class="footer__heading">{{ section.settings.newsletter_heading }}</h3>
      <div class="footer__newsletter-text">
        {{ section.settings.newsletter_text }}
      </div>
      
        <div class="footer__newsletter-form">
          {% form 'customer', id: 'newsletter-form' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer__form-row">
              <div class="footer__form-field">
                <input
                  type="email"
                  name="contact[email]"
                  id="Email"
                  class="footer__form-input"
                  value="{% if customer %}{{ customer.email }}{% endif %}"
                  placeholder="{{ section.settings.newsletter_placeholder }}"
                  aria-required="true"
                  required
                  autocorrect="off"
                  autocapitalize="off"
                >
              </div>
              <div class="footer__form-action">
                <button type="submit" class="footer__form-submit" name="commit">
                  <span class="footer__button-text">{{ section.settings.newsletter_button }}</span>
                  <span class="footer__button-icon">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </span>
                </button>
              </div>
            </div>
            {%- if form.posted_successfully? -%}
              <p class="footer__form-success">{{ section.settings.newsletter_success_text }}</p>
            {%- endif -%}
            {%- if form.errors -%}
              <p class="footer__form-error">{{ form.errors.translated_fields['email'] }}</p>
            {%- endif -%}
          {% endform %}
        </div>
      {% endif %}
    </div>
  </div>
  
  <!-- Bottom Section with Legal Links -->
  <div class="footer__bottom footer-animate" data-delay="300">
    <div class="footer__bottom-container">
      <div class="footer__copyright">
        &copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text | default: shop.name }}. {{ 'footer.rights-text' | t }}
      </div>
      
      <div class="footer__legal">
        <ul class="footer__legal-list">
          {% if section.settings.show_policy_links %}
            {% if shop.privacy_policy %}
              <li class="footer__legal-item">
                <a href="{{ shop.privacy_policy.url }}" class="footer__legal-link">{{ 'footer.privacy-policy' | t }}</a>
              </li>
            {% endif %}
            
            {% if shop.terms_of_service %}
              <li class="footer__legal-item">
                <a href="{{ shop.terms_of_service.url }}" class="footer__legal-link">{{ 'footer.terms-of-service' | t }}</a>
              </li>
            {% endif %}
            
            {% if shop.refund_policy %}
              <li class="footer__legal-item">
                <a href="{{ shop.refund_policy.url }}" class="footer__legal-link">{{ 'footer.refund-policy' | t }}</a>
              </li>
            {% endif %}
          {% endif %}
        </ul>
      </div>
      
      {% if section.settings.show_payment_icons %}
        <div class="footer__payment">
          <span class="footer__payment-text">{{ "footer.payment-text" | t }}</span>
          <ul class="footer__payment-list">
            {% for type in shop.enabled_payment_types %}
              <li class="footer__payment-item">
                {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</footer>

<style>
/* CSS pour la section des liens rapides */
.footer__quicklinks {
  margin-bottom: 20px;
}

.footer__heading {
  font-size: 18px;
  font-weight: 600;
  color: #f0c362;
  margin-bottom: 20px;
}

.footer__menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__menu-item {
  margin-bottom: 12px;
}

.footer__menu-link {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  font-size: 15px;
  transition: color 0.3s ease;
}

.footer__menu-link:hover {
  color: #f0c362;
}

/* Style des moyens de paiement */
.footer__payment-text {
  display: block;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 12px;
}

.footer__payment-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.footer__payment-item {
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.footer__payment-item:hover {
  opacity: 1;
}

/* Animation des éléments du footer */
.footer-animate {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

.footer-animate.animated {
  opacity: 1;
  transform: translateY(0);
}

@media screen and (max-width: 767px) {
  .footer__payment-icon {
    width: 36px;
    height: 24px;
  }
}

@media (prefers-reduced-motion: reduce) {
  .footer-animate {
    transition: none;
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Observer pour l'animation des éléments du footer
  const animateElements = document.querySelectorAll('.footer-animate');
  
  if (animateElements.length > 0) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const element = entry.target;
          const delay = element.getAttribute('data-delay') || 0;
          
          setTimeout(() => {
            element.classList.add('animated');
          }, delay);
          
          // Une fois animé, on arrête d'observer
          observer.unobserve(element);
        }
      });
    }, {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    });
    
    // Observer chaque élément à animer
    animateElements.forEach(element => {
      observer.observe(element);
    });
  }
});
</script>

