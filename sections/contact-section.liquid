{{ 'contact-section.css' | asset_url | stylesheet_tag }}

<div class="contact">
  <div class="contact__container">
    <div class="contact__content">
      <h1 class="contact__title">{{ 'contact.title' | t }}</h1>
      <p class="contact__description">{{ 'contact.description' | t }}</p>
      
      <form
        class="contact__form"
        action="/contact#contact_form"
        method="post"
        accept-charset="UTF-8"
      >
        <input type="hidden" name="form_type" value="contact" />
        <input type="hidden" name="utf8" value="âœ“" />
        
        <div class="contact__form-group">
          <label for="contactFormName" class="contact__label">
            {{ 'contact.lenom' | t }}
          </label>
          <input
            type="text"
            id="contactFormName"
            name="contact[name]"
            class="contact__input"
            required
          >
        </div>
        
        <div class="contact__form-group">
          <label for="contactFormEmail" class="contact__label">
            {{ 'contact.lemail' | t }}
          </label>
          <input
            type="email"
            id="contactFormEmail"
            name="contact[email]"
            class="contact__input"
            required
          >
        </div>
        
        <div class="contact__form-group">
          <label for="contactFormMessage" class="contact__label">
            {{ 'contact.lemessage' | t }}
          </label>
          <textarea
            id="contactFormMessage"
            name="contact[body]"
            rows="6"
            class="contact__textarea"
            required
          ></textarea>
        </div>
        
        <div class="contact__form-actions">
          <button type="submit" class="contact__submit-button">
            <span class="contact__button-text">
              {{ 'contact.button' | t }}
            </span>
            <span class="contact__button-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path
                  d="M5 12H19M19 12L12 5M19 12L12 19"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </span>
          </button>
        </div>
      </form>
    </div>
    
    <div class="contact__image-container">
      <div class="contact__image-wrapper">
        <img 
          src="{{ 'pixel-character.png' | asset_url }}" 
          alt="Pixel art character"
          class="contact__image"
          loading="lazy"
          width="100%"
          height="auto"
        >
        <div class="contact__image-glow"></div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Section",
  "presets": [
    {
      "name": "Contact Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
