{% comment %}
  judgeme-integration.liquid - Simple JudgeMe integration section with English text
{% endcomment %}

{{ 'judgeme-pixellect.css' | asset_url | stylesheet_tag }}

<div class="judgeme-simple">
  <div class="judgeme-simple__container">
    {% if section.settings.show_title %}
      <div class="judgeme-simple__header">
        <h2 class="judgeme-simple__title">{{ section.settings.title_text }}</h2>
        {% if section.settings.show_subtitle %}
          <p class="judgeme-simple__subtitle">{{ section.settings.subtitle_text }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    {% if section.settings.show_shipping_info %}
      <div class="judgeme-simple__shipping-info">
        <div class="judgeme-simple__shipping-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#f0c362" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 6V12L16 14" stroke="#f0c362" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="judgeme-simple__shipping-text">
          <strong>{{ section.settings.shipping_title }}</strong> {{ section.settings.shipping_text }}
        </div>
      </div>
    {% endif %}
    
    <!-- Standard JudgeMe code -->
    <div id="judgeme_product_reviews" class="jdgm-widget jdgm-review-widget" data-id="{{ product.id }}">
      {{ product.metafields.judgeme.widget }}
    </div>
    
    {% if section.settings.show_guarantee %}
      <div class="judgeme-simple__guarantee">
        <div class="judgeme-simple__guarantee-content">
          <div class="judgeme-simple__guarantee-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="#f0c362" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="judgeme-simple__guarantee-text">
            <strong>{{ section.settings.guarantee_title }}</strong> {{ section.settings.guarantee_text }}
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "JudgeMe Reviews",
  "settings": [
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    },
    {
      "type": "text",
      "id": "title_text",
      "label": "Title text",
      "default": "Customer Reviews"
    },
    {
      "type": "checkbox",
      "id": "show_subtitle",
      "label": "Show subtitle",
      "default": false
    },
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "Subtitle text",
      "default": "Discover what our customers think about our products"
    },
    {
      "type": "header",
      "content": "Additional Information"
    },
    {
      "type": "checkbox",
      "id": "show_shipping_info",
      "label": "Show shipping information",
      "default": true
    },
    {
      "type": "text",
      "id": "shipping_title",
      "label": "Shipping title",
      "default": "Shipping Time:"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Shipping text",
      "default": "10-20 business days for international delivery. We ship from our international warehouses to guarantee the best prices."
    },
    {
      "type": "checkbox",
      "id": "show_guarantee",
      "label": "Show guarantee",
      "default": true
    },
    {
      "type": "text",
      "id": "guarantee_title",
      "label": "Guarantee title",
      "default": "Satisfaction Guarantee:"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee text",
      "default": "We offer a full refund if you're not satisfied with your purchase. Your satisfaction is our top priority!"
    }
  ],
  "presets": [
    {
      "name": "JudgeMe Reviews",
      "category": "Product"
    }
  ]
}
{% endschema %}