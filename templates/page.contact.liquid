{% comment %}
  page-contact.liquid - Template pour la page Contact
{% endcomment %}

<div class="contact-page">
  <div class="contact-page__container">
    <div class="contact-page__header">
      <h1 class="contact-page__title">{{ page.title }}</h1>
    </div>
    
    <div class="contact-page__content">
      <div class="contact-page__intro">
        {% if page.content != blank %}
          {{ page.content }}
        {% else %}
          <p>Vous avez une question? N'hésitez pas à nous contacter via email.</p>
        {% endif %}
      </div>
      
      <div class="contact-page__info-container">
        <div class="contact-page__info-box">
          <div class="contact-page__info-icon">
            <img src="{{ 'pixel-envelope.png' | asset_url }}" alt="Email" class="contact-page__icon-image">
          </div>
          <div class="contact-page__info-text">
            <a href="mailto:{{ settings.email_address | default: 'info@exemple.com' }}" class="contact-page__email-link">
              {{ settings.email_address | default: 'info@exemple.com' }}
            </a>
          </div>
        </div>
      </div>
      
      <div class="contact-page__form-container">
        <h2 class="contact-page__subtitle">Envoyez-nous un message</h2>
        
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="contact-page__success">
              <p>Merci pour votre message! Nous vous répondrons dans les plus brefs délais.</p>
            </div>
          {% endif %}
          
          {% if form.errors %}
            <div class="contact-page__error">
              <p>Oops! Veuillez vérifier les champs ci-dessous et réessayer.</p>
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          <div class="contact-page__form-layout">
            <div class="contact-page__form-field">
              <label for="ContactFormName" class="contact-page__label">Nom</label>
              <input type="text" id="ContactFormName" name="contact[name]" value="{% if form.name %}{{ form.name }}{% endif %}" class="contact-page__input">
            </div>
            
            <div class="contact-page__form-field">
              <label for="ContactFormEmail" class="contact-page__label">Email</label>
              <input type="email" id="ContactFormEmail" name="contact[email]" value="{% if form.email %}{{ form.email }}{% endif %}" required autocomplete="email" class="contact-page__input">
            </div>
            
            <div class="contact-page__form-field contact-page__form-field--full">
              <label for="ContactFormPhone" class="contact-page__label">Téléphone (optionnel)</label>
              <input type="tel" id="ContactFormPhone" name="contact[phone]" value="{% if form.phone %}{{ form.phone }}{% endif %}" class="contact-page__input">
            </div>
            
            <div class="contact-page__form-field contact-page__form-field--full">
              <label for="ContactFormSubject" class="contact-page__label">Sujet</label>
              <input type="text" id="ContactFormSubject" name="contact[subject]" value="{% if form.subject %}{{ form.subject }}{% endif %}" required class="contact-page__input">
            </div>
            
            <div class="contact-page__form-field contact-page__form-field--full">
              <label for="ContactFormMessage" class="contact-page__label">Message</label>
              <textarea id="ContactFormMessage" name="contact[body]" required rows="6" class="contact-page__textarea">{% if form.body %}{{ form.body }}{% endif %}</textarea>
            </div>
          </div>
          
          <div class="contact-page__form-submit">
            <button type="submit" class="contact-page__submit-button">
              <span class="contact-page__button-text">Envoyer</span>
              <span class="contact-page__button-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
          </div>
        {% endform %}
      </div>
    </div>
    
    {% if settings.show_map %}
      <div class="contact-page__map">
        <h2 class="contact-page__subtitle">Nous trouver</h2>
        <div class="contact-page__map-container">
          <div class="contact-page__map-embed">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83998.76457430364!2d2.2769947739006505!3d48.85894658133862!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f06e2b70f%3A0x40b82c3688c9460!2sParis%2C%20France!5e0!3m2!1sfr!2sfr!4v1654857936457!5m2!1sfr!2sfr" 
              width="100%" 
              height="450" 
              style="border:0; border-radius: 8px;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
.contact-page {
  background-color: #0c0d13;
  color: rgba(255, 255, 255, 0.8);
  padding: 80px 0;
  width: 100%;
  position: relative;
}

.contact-page::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: radial-gradient(rgba(60, 60, 70, 0.1) 1px, transparent 1px);
  background-size: 20px 20px;
  pointer-events: none;
  z-index: 1;
}

.contact-page__container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 24px;
  position: relative;
  z-index: 2;
}

.contact-page__header {
  margin-bottom: 60px;
  text-align: left;
}

.contact-page__title {
  font-size: 64px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.9);
  background: linear-gradient(to bottom, #ffffff 0%, #c0c0c0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  display: inline-block;
  margin: 0;
  letter-spacing: 1px;
}

.contact-page__title::after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 80px;
  height: 3px;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.1));
  border-radius: 3px;
}

.contact-page__content {
  max-width: 900px;
  margin: 0 auto;
}

.contact-page__intro {
  font-size: 20px;
  line-height: 1.5;
  margin-bottom: 40px;
  text-align: center;
}

.contact-page__info-container {
  margin-bottom: 60px;
}

.contact-page__info-box {
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 8px;
  padding: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.1);
  max-width: 600px;
  margin: 0 auto;
}

.contact-page__info-box:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.2);
}

.contact-page__info-icon {
  width: 60px;
  height: 60px;
}

.contact-page__icon-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.contact-page__info-text {
  font-size: 24px;
  font-weight: 600;
}

.contact-page__email-link {
  color: #f0c362;
  text-decoration: none;
  transition: color 0.3s ease;
}

.contact-page__email-link:hover {
  color: #fff;
  text-decoration: underline;
}

.contact-page__subtitle {
  font-size: 36px;
  font-weight: 600;
  margin-bottom: 30px;
  color: rgba(255, 255, 255, 0.9);
  position: relative;
  display: inline-block;
  padding-bottom: 10px;
}

.contact-page__subtitle::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.1));
  border-radius: 2px;
}

.contact-page__form-container {
  margin-bottom: 60px;
}

.contact-page__success {
  background-color: rgba(76, 175, 80, 0.1);
  border: 1px solid rgba(76, 175, 80, 0.3);
  border-radius: 6px;
  padding: 15px;
  margin-bottom: 30px;
  color: #4CAF50;
}

.contact-page__error {
  background-color: rgba(244, 67, 54, 0.1);
  border: 1px solid rgba(244, 67, 54, 0.3);
  border-radius: 6px;
  padding: 15px;
  margin-bottom: 30px;
  color: #F44336;
}

.contact-page__form-layout {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  margin-bottom: 30px;
}

.contact-page__form-field--full {
  grid-column: span 2;
}

.contact-page__label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 8px;
  color: rgba(255, 255, 255, 0.9);
}

.contact-page__input,
.contact-page__textarea {
  width: 100%;
  padding: 12px 16px;
  background-color: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  color: #fff;
  font-size: 16px;
  transition: border-color 0.3s ease;
}

.contact-page__input:focus,
.contact-page__textarea:focus {
  outline: none;
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.05);
}

.contact-page__textarea {
  resize: vertical;
}

.contact-page__form-submit {
  text-align: right;
}

.contact-page__submit-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  background-color: rgba(240, 195, 98, 0.15);
  border: 2px solid rgba(240, 195, 98, 0.4);
  color: #f0c362;
  padding: 12px 24px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.contact-page__submit-button::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(
    rgba(255, 255, 255, 0.05) 25%,
    transparent 25%,
    transparent 50%,
    rgba(255, 255, 255, 0.05) 50%,
    rgba(255, 255, 255, 0.05) 75%,
    transparent 75%
  );
  background-size: 4px 4px;
  pointer-events: none;
}

.contact-page__submit-button:hover {
  background-color: rgba(240, 195, 98, 0.3);
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.contact-page__submit-button:active {
  transform: translateY(1px);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.contact-page__button-icon {
  transition: transform 0.3s ease;
}

.contact-page__submit-button:hover .contact-page__button-icon {
  transform: translateX(3px);
}

.contact-page__map {
  margin-top: 60px;
}

.contact-page__map-container {
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

@media screen and (max-width: 991px) {
  .contact-page {
    padding: 60px 0;
  }
  
  .contact-page__title {
    font-size: 48px;
  }
  
  .contact-page__intro {
    font-size: 18px;
  }
  
  .contact-page__subtitle {
    font-size: 30px;
  }
}

@media screen and (max-width: 767px) {
  .contact-page {
    padding: 40px 0;
  }
  
  .contact-page__title {
    font-size: 36px;
  }
  
  .contact-page__form-layout {
    grid-template-columns: 1fr;
  }
  
  .contact-page__form-field--full {
    grid-column: span 1;
  }
  
  .contact-page__info-box {
    flex-direction: column;
    text-align: center;
    padding: 20px;
  }
  
  .contact-page__info-text {
    font-size: 20px;
  }
  
  .contact-page__form-submit {
    text-align: center;
  }
}
</style>