.footer {
    color: rgba(255, 255, 255, 0.8);
    padding-top: 64px;
    width: 100%;
    position: relative;
    overflow: hidden;
    font-family: 'Montserrat', sans-serif;
  }
  
  .footer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  }
  
  .footer__container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px 64px;
    gap: 40px;
    position: relative;
  }
  
  /* Branding section */
  .footer__branding {
    flex: 1;
    min-width: 240px;
    max-width: 400px;
  }
  
  .footer__logo-link {
    display: inline-block;
    margin-bottom: 20px;
    text-decoration: none;
  }
  
  .footer__logo-text {
    color: #fff;
    font-size: 24px;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
    background: linear-gradient(120deg, #ffffff, #a6a6a6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .footer__description {
    margin-bottom: 24px;
    line-height: 1.6;
    font-size: 15px;
    opacity: 0.9;
  }
  
  /* Social icons */
  .footer__social-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 16px;
  }
  
  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    transition: all 0.3s ease;
  }
  
  .footer__social-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    color: #fff;
  }
  
  /* Navigation columns */
  .footer__nav-container {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }
  
  .footer__nav-section {
    flex: 1;
    min-width: 160px;
  }
  
  .footer__heading {
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 24px;
    position: relative;
    padding-bottom: 8px;
  }
  
  .footer__heading::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.2));
    border-radius: 2px;
  }
  
  .footer__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer__nav-item {
    margin-bottom: 12px;
  }
  
  .footer__nav-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 15px;
    transition: all 0.3s ease;
    position: relative;
    display: inline-block;
  }
  
  .footer__nav-link::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.8);
    transition: width 0.3s ease;
  }
  
  .footer__nav-link:hover {
    color: #fff;
  }
  
  .footer__nav-link:hover::after {
    width: 100%;
  }
  
  /* Newsletter section */
  .footer__newsletter {
    flex: 1;
    min-width: 240px;
    max-width: 400px;
  }
  
  .footer__newsletter-text {
    margin-bottom: 20px;
    line-height: 1.6;
    font-size: 15px;
    opacity: 0.9;
  }
  
  .footer__form-row {
    display: flex;
    gap: 8px;
  }
  
  .footer__form-field {
    flex: 1;
  }
  
  .footer__form-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    background-color: rgba(255, 255, 255, 0.05);
    color: #fff;
    font-size: 14px;
    outline: none;
    transition: border-color 0.3s ease;
  }
  
  .footer__form-input:focus {
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .footer__form-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .footer__form-submit {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    border: none;
    border-radius: 4px;
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .footer__form-submit:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  .footer__button-icon {
    transition: transform 0.3s ease;
  }
  
  .footer__form-submit:hover .footer__button-icon {
    transform: translateX(3px);
  }
  
  .footer__form-success {
    margin-top: 12px;
    color: #4CAF50;
    font-size: 14px;
  }
  
  .footer__form-error {
    margin-top: 12px;
    color: #FF5252;
    font-size: 14px;
  }
  
  /* Bottom section */
  .footer__bottom {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 24px 0;
    font-size: 14px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .footer__bottom-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .footer__copyright {
    opacity: 0.7;
  }
  
  .footer__legal-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 20px;
    flex-wrap: wrap;
  }
  
  .footer__legal-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer__legal-link:hover {
    color: #fff;
  }
  
  /* Payment icons */
  .footer__payment {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 12px;
  }
  
  .footer__payment-text {
    opacity: 0.7;
  }
  
  .footer__payment-list {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 10px;
  }
  
  .footer__payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .footer__payment-icon:hover {
    opacity: 1;
  }
  
  /* Responsive design */
  @media screen and (max-width: 991px) {
    .footer__container {
      flex-direction: column;
      padding-bottom: 48px;
    }
    
    .footer__branding,
    .footer__nav-container,
    .footer__newsletter {
      max-width: 100%;
    }
    
    .footer__nav-container {
      width: 100%;
    }
    
    .footer__bottom-container {
      flex-direction: column;
      text-align: center;
    }
    
    .footer__legal-list,
    .footer__payment {
      justify-content: center;
    }
  }
  
  @media screen and (max-width: 767px) {
    .footer {
      padding-top: 48px;
    }
    
    .footer__nav-container {
      flex-direction: column;
      gap: 24px;
    }
    
    .footer__social-list {
      justify-content: center;
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .footer__social-link,
    .footer__nav-link::after,
    .footer__button-icon {
      transition: none;
    }
  }