/* product.css - Enhanced style for dropshipping product pages with better discounts and mobile responsiveness */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap');

/* Base and container */
.product {
  width: 100%;
  color: rgba(255, 255, 255, 0.85);
  font-family: 'Montserrat', sans-serif;
  padding: 60px 0;
  position: relative;
}

/* Fix for transparency issue during page load - elements always visible */
.product-animate {
  opacity: 1;
  transform: none;
  transition: opacity 0.8s ease, transform 0.8s ease;
}

/* Apply animations only when JS is enabled */
.js-enabled .product-animate {
  opacity: 0;
  transform: translateY(20px);
}

.product-animate.animated {
  opacity: 1;
  transform: translateY(0);
}

.product__container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 24px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
}

/* Enhanced Discount UI - Fixed for header overlap */
.product__floating-discount {
  position: fixed;
  top: 100px; /* Increased from 20px to place below headers */
  right: 20px;
  z-index: 90; /* Lower z-index so header stays on top */
  background-color: rgba(15, 15, 20, 0.85);
  border: 1px solid rgba(240, 195, 98, 0.3);
  border-radius: 6px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(8px);
  transform: translateX(150%);
  transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-width: 260px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Adjust positioning based on screen size for better header clearance */
@media screen and (min-width: 992px) {
  .product__floating-discount {
    top: 100px; /* Ensure enough space below header on desktop */
  }
}

@media screen and (min-width: 1200px) {
  .product__floating-discount {
    top: 120px; /* More space on larger screens */
  }
}

.product__floating-discount.active {
  transform: translateX(0);
}

.product__discount-badge {
  display: inline-block;
  background-color: #f0c362;
  color: #0c0d13;
  font-weight: 700;
  font-size: 16px;
  padding: 6px 14px;
  border-radius: 4px;
  margin-bottom: 12px;
  transform: scale(1);
  animation: pulse-discount 2s infinite;
}

@keyframes pulse-discount {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.product__discount-timer {
  text-align: center;
  margin-top: 6px;
}

.product__discount-timer-text {
  display: block;
  font-size: 13px;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 6px;
}

.product__discount-countdown {
  font-size: 18px;
  font-weight: 700;
  color: #f0c362;
  background-color: rgba(20, 20, 25, 0.6);
  padding: 6px 10px;
  border-radius: 4px;
  border: 1px solid rgba(240, 195, 98, 0.2);
  letter-spacing: 1px;
}

/* Product Gallery */
.product__gallery {
  position: relative;
}

.product__main-image-container {
  position: relative;
  overflow: hidden;
  margin-bottom: 20px;
  background-color: rgba(20, 20, 25, 0.5);
  border: 1px solid rgba(240, 195, 98, 0.2);
  border-radius: 4px;
  aspect-ratio: 1 / 1;
}

.product__main-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
  transition: transform 0.5s ease;
}

.product__main-image-container:hover .product__main-image {
  transform: scale(1.05);
}

.product__image-controls {
  position: absolute;
  top: 16px;
  right: 16px;
  display: flex;
  gap: 8px;
}

.product__image-zoom,
.product__image-control {
  width: 40px;
  height: 40px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  cursor: pointer;
  opacity: 0;
  transition: opacity 0.3s ease, background-color 0.3s ease;
  border: none;
}

.product__image-control {
  color: #f0c362;
}

.product__main-image-container:hover .product__image-zoom,
.product__main-image-container:hover .product__image-control {
  opacity: 1;
}

.product__image-zoom:hover,
.product__image-control:hover {
  background-color: rgba(20, 20, 25, 0.8);
}

.product__thumbnails {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  margin-bottom: 10px;
}

.product__thumbnail {
  width: 80px;
  height: 80px;
  border: 1px solid rgba(240, 195, 98, 0.2);
  cursor: pointer;
  overflow: hidden;
  opacity: 0.7;
  transition: opacity 0.3s ease, transform 0.3s ease, border-color 0.3s ease;
  position: relative;
  border-radius: 4px;
}

.product__thumbnail:hover {
  opacity: 1;
  transform: translateY(-2px);
}

.product__thumbnail.is-active {
  opacity: 1;
  border-color: #f0c362;
}

.product__thumbnail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product__thumbnails-navigation {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.product__thumbnails-indicator {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
}

/* Product Details */
.product__details {
  position: relative;
}

.product__title {
  font-size: 32px;
  font-weight: 700;
  color: #f0c362;
  margin-bottom: 20px;
  line-height: 1.2;
}

.product__price-container {
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.product__price {
  font-size: 28px;
  font-weight: 700;
  color: #fff;
}

.product__price--sale {
  color: #f0c362;
}

.product__price--compare {
  font-size: 18px;
  color: rgba(255, 255, 255, 0.5);
  text-decoration: line-through;
}

.product__price-saving {
  background-color: #f0c362;
  color: #0c0d13;
  font-size: 14px;
  font-weight: 700;
  padding: 4px 10px;
  border-radius: 4px;
}

.product__form {
  margin-bottom: 32px;
}

/* Product Options */
.product__variants {
  margin-bottom: 24px;
}

.product__option {
  margin-bottom: 16px;
}

.product__option-label {
  display: block;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 8px;
  color: rgba(255, 255, 255, 0.9);
}

.product__select {
  width: 100%;
  padding: 12px 16px;
  font-size: 14px;
  font-family: 'Montserrat', sans-serif;
  background-color: rgba(30, 30, 35, 0.6);
  border: 1px solid rgba(60, 60, 65, 0.8);
  color: #fff;
  appearance: none;
  background-image: url("data:image/svg+xml,%3Csvg width='10' height='6' viewBox='0 0 10 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L5 5L9 1' stroke='%23ffffff' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: right 16px center;
  cursor: pointer;
  border-radius: 4px;
}

.product__select:focus {
  outline: none;
  border-color: rgba(240, 195, 98, 0.4);
}

/* Quantity - Fixed styling for buttons */
.product__quantity {
  margin-bottom: 24px;
}

.product__quantity-label {
  display: block;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 8px;
  color: rgba(255, 255, 255, 0.9);
}

.product__quantity-wrapper {
  display: flex;
  align-items: center;
  width: 120px;
  border: 1px solid rgba(60, 60, 65, 0.8);
  border-radius: 4px;
  overflow: hidden;
}

.product__quantity-button {
  width: 32px;
  height: 32px;
  background-color: rgba(30, 30, 35, 0.6);
  border: none;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background-color 0.3s ease;
  padding: 0;
  position: relative;
}

/* Improved plus/minus buttons */
.product__quantity-decrease::before {
  content: "";
  display: block;
  width: 10px;
  height: 2px;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.product__quantity-increase::before,
.product__quantity-increase::after {
  content: "";
  display: block;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.product__quantity-increase::before {
  width: 10px;
  height: 2px;
}

.product__quantity-increase::after {
  width: 2px;
  height: 10px;
}

.product__quantity-button:hover {
  background-color: rgba(40, 40, 45, 0.8);
}

.product__quantity-input {
  flex: 1;
  height: 32px;
  width: 100%;
  border: none;
  background-color: rgba(20, 20, 25, 0.5);
  color: #fff;
  font-size: 15px;
  text-align: center;
  font-family: 'Montserrat', sans-serif;
  -moz-appearance: textfield;
  padding: 0 4px;
}

.product__quantity-input::-webkit-outer-spin-button,
.product__quantity-input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Enhanced Promo Timer */
.product__promo {
  margin-bottom: 20px;
  background-color: rgba(240, 195, 98, 0.1);
  padding: 16px;
  border: 1px solid rgba(240, 195, 98, 0.2);
  border-radius: 4px;
}

.product__promo-badge {
  display: inline-block;
  background-color: #f0c362;
  color: #0c0d13;
  font-weight: 700;
  font-size: 14px;
  padding: 4px 12px;
  margin-bottom: 12px;
  border-radius: 4px;
}

.product__timer {
  display: flex;
  justify-content: space-between;
  gap: 8px;
  margin-bottom: 16px;
}

.product__timer-item {
  flex: 1;
  background-color: rgba(15, 15, 20, 0.8);
  padding: 10px 4px;
  text-align: center;
  border: 1px solid rgba(240, 195, 98, 0.3);
  border-radius: 4px;
  position: relative;
  overflow: hidden;
}

.product__timer-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(240, 195, 98, 0.5), transparent);
}

.product__timer-value {
  display: block;
  font-size: 22px;
  font-weight: 700;
  color: #f0c362;
  margin-bottom: 4px;
  position: relative;
  transition: transform 0.3s ease;
}

.product__timer-value.pulse {
  animation: timer-pulse 0.5s ease;
}

@keyframes timer-pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.product__timer-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Stock Indicator */
.product__stock-indicator {
  margin-top: 12px;
}

.product__stock-bar {
  height: 8px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 8px;
}

.product__stock-progress {
  height: 100%;
  background: linear-gradient(90deg, #f0c362, #ffdc8c);
  border-radius: 4px;
  width: 75%;
  transition: width 0.3s ease;
}

.product__stock-text {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

/* Button styles */
.product__actions {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

.product__add-to-cart-button {
  background-color: #564525;
  color: #f0c362;
  border: none;
  padding: 16px 24px;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  cursor: pointer;
  font-family: 'Montserrat', sans-serif;
  transition: background-color 0.3s ease, transform 0.3s ease;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-radius: 4px;
}

.product__add-to-cart-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product__add-to-cart-button:hover {
  background-color: #6a552c;
  transform: translateY(-2px);
}

.product__add-to-cart-button:hover::before {
  opacity: 1;
}

.product__add-to-cart-button.disabled {
  background-color: rgba(60, 60, 65, 0.8);
  color: rgba(255, 255, 255, 0.5);
  cursor: not-allowed;
}

.shopify-payment-button {
  margin-top: 8px;
}

.shopify-payment-button__button {
  font-family: 'Montserrat', sans-serif !important;
  border-radius: 4px !important;
}

/* Shipping Benefits */
.product__benefits {
  margin-top: 32px;
  padding-top: 24px;
  border-top: 1px solid rgba(60, 60, 65, 0.8);
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

.product__benefit-item {
  display: flex;
  gap: 16px;
  padding: 12px;
  background-color: rgba(30, 30, 35, 0.3);
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.product__benefit-item:hover {
  background-color: rgba(30, 30, 35, 0.5);
}

.product__benefit-icon {
  flex-shrink: 0;
  width: 24px;
  color: #f0c362;
}

.product__benefit-title {
  font-size: 15px;
  font-weight: 600;
  color: #f0c362;
  margin: 0 0 4px 0;
}

.product__benefit-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.7);
  margin: 0;
}

/* Trust Badges */
.product__trust {
  margin-top: 32px;
  border-top: 1px solid rgba(60, 60, 65, 0.8);
  padding-top: 20px;
}

.product__trust-title {
  font-size: 14px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  margin: 0 0 12px 0;
  text-align: center;
}

.product__trust-badges {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12px;
}

.footer__payment-item {
  list-style: none;
  opacity: 0.8;
  filter: grayscale(0.2);
  transition: opacity 0.3s ease, filter 0.3s ease;
}

.footer__payment-item:hover {
  opacity: 1;
  filter: grayscale(0);
}

.footer__payment-icon {
  height: 24px;
  width: auto;
}

/* Accordions */
.product__description-container {
  max-width: 1280px;
  margin: 60px auto 0;
  padding: 0 24px;
}

.product__accordions {
  margin-bottom: 60px;
}

.product__accordion {
  border-bottom: 1px solid rgba(60, 60, 65, 0.8);
}

.product__accordion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 20px 0;
  background: none;
  border: none;
  font-size: 16px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  text-align: left;
  font-family: 'Montserrat', sans-serif;
}

.product__accordion-header:hover {
  color: #f0c362;
}

.product__accordion-icon {
  transition: transform 0.3s ease;
}

.product__accordion.is-active .product__accordion-header {
  color: #f0c362;
}

.product__accordion.is-active .product__accordion-icon {
  transform: rotate(180deg);
}

.product__accordion-content {
  height: 0;
  overflow: hidden;
  transition: height 0.3s ease;
  padding: 0 16px;
}

.product__accordion.is-active .product__accordion-content {
  height: auto;
  padding-bottom: 24px;
}

/* Mobile Buy Bar */
.product__mobile-buy-bar {
  display: none;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(15, 15, 20, 0.95);
  padding: 12px 16px;
  z-index: 100;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(240, 195, 98, 0.2);
}

.product__mobile-price-container {
  display: flex;
  flex-direction: column;
}

.product__mobile-price {
  font-size: 18px;
  font-weight: 700;
  color: #f0c362;
}

.product__mobile-compare {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.5);
  text-decoration: line-through;
}

.product__mobile-buy-button {
  background-color: #564525;
  color: #f0c362;
  border: none;
  padding: 12px 18px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  border-radius: 4px;
  cursor: pointer;
}

.product__mobile-buy-button:disabled {
  background-color: rgba(60, 60, 65, 0.8);
  color: rgba(255, 255, 255, 0.5);
}

/* Rich Text Content */
.rte {
  font-size: 16px;
  line-height: 1.7;
  color: rgba(255, 255, 255, 0.8);
}

.rte h1,
.rte h2,
.rte h3,
.rte h4,
.rte h5,
.rte h6 {
  color: #f0c362;
  margin-top: 24px;
  margin-bottom: 16px;
}

.rte p {
  margin-bottom: 16px;
}

.rte ul,
.rte ol {
  padding-left: 24px;
  margin-bottom: 16px;
}

.rte ul li,
.rte ol li {
  margin-bottom: 8px;
}

.rte img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 24px 0;
  border: 1px solid rgba(240, 195, 98, 0.2);
  border-radius: 4px;
}

/* Media Queries for better responsiveness */
@media screen and (max-width: 1200px) {
  .product__container {
    gap: 40px;
  }
}

@media screen and (max-width: 991px) {
  .product__container {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .product__gallery {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .product__floating-discount {
    top: 80px; /* Adjusted for smaller screens */
    right: 10px;
    max-width: 220px;
    padding: 12px;
  }
}

@media screen and (max-width: 767px) {
  .product {
    padding: 20px 0 80px;
  }
  
  .product__container {
    padding: 0 16px;
    gap: 30px;
  }
  
  .product__title {
    font-size: 24px;
    margin-bottom: 16px;
  }
  
  .product__main-image-container {
    margin-bottom: 12px;
    border-radius: 4px;
  }
  
  .product__thumbnails {
    gap: 8px;
  }
  
  .product__thumbnail {
    width: 60px;
    height: 60px;
  }
  
  .product__mobile-buy-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .product__price-container {
    margin-bottom: 16px;
  }
  
  .product__price {
    font-size: 22px;
  }
  
  .product__price--compare {
    font-size: 16px;
  }
  
  .product__promo {
    padding: 12px;
  }
  
  .product__timer {
    gap: 4px;
  }
  
  .product__timer-item {
    padding: 8px 2px;
  }
  
  .product__timer-value {
    font-size: 18px;
  }
  
  .product__timer-label {
    font-size: 10px;
  }
  
  .product__description-container {
    margin-top: 40px;
    padding: 0 16px;
  }
  
  .product__accordions {
    margin-bottom: 40px;
  }
  
  /* Fix for floating discount on mobile */
  .product__floating-discount {
    position: absolute;
    top: 10px;
    right: 10px;
    left: auto;
    max-width: 130px;
    padding: 8px;
    font-size: 90%;
    transform: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .product__floating-discount.active {
    transform: none;
    opacity: 1;
  }
  
  .product__discount-badge {
    font-size: 12px;
    padding: 3px 8px;
    margin-bottom: 8px;
  }
  
  .product__discount-timer-text {
    font-size: 11px;
    margin-bottom: 4px;
  }
  
  .product__discount-countdown {
    font-size: 14px;
    padding: 3px 6px;
  }
  
  .product__image-controls {
    top: 8px;
    right: 8px;
  }
  
  .product__image-zoom,
  .product__image-control {
    width: 36px;
    height: 36px;
    opacity: 1;
  }
  
  .product__benefits {
    margin-top: 24px;
    padding-top: 16px;
    gap: 12px;
  }
  
  .product__form {
    margin-bottom: 24px;
  }
}

@media screen and (max-width: 480px) {
  .product__thumbnail {
    width: 50px;
    height: 50px;
  }
  
  .product__timer-item {
    padding: 6px 2px;
  }
  
  .product__timer-value {
    font-size: 16px;
  }
  
  .product__timer-label {
    font-size: 9px;
  }
  
  .product__benefit-item {
    padding: 8px;
    gap: 12px;
  }
  
  .product__benefit-title {
    font-size: 14px;
  }
  
  .product__benefit-text {
    font-size: 12px;
  }
  
  .product__accordion-header {
    padding: 16px 0;
    font-size: 15px;
  }
  
  /* Even smaller for very small screens */
  .product__floating-discount {
    max-width: 110px;
    padding: 6px;
  }
}

/* Print styles */
@media print {
  .product__mobile-buy-bar,
  .product__floating-discount {
    display: none !important;
  }
}
