.hero {
  padding: 80px 0;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.hero__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 24px;
  gap: 40px;
}

.hero__content {
  flex: 1;
  max-width: 550px;
}

.hero__title {
  color: #fff;
  font-size: 3.5em;
  line-height: 1.1;
  font-weight: 900;
  margin-bottom: 20px;
  font-family: 'Montserrat', sans-serif;
}

.hero__description {
  color: rgba(255, 255, 255, 0.8);
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 30px;
  font-family: 'Montserrat', sans-serif;
}

.hero__button {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.1);
  color: #fff;
  padding: 14px 32px;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  transition: background-color 0.3s ease;
  font-family: 'Montserrat', sans-serif;
}

.hero__button:hover {
  background-color: rgba(255, 255, 255, 0.2);
}

.hero__image-container {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  max-width: 550px;
}

.hero__image-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
}

/* Image principale avec masque complexe utilisant plusieurs dégradés */
.hero__image {
  max-width: 100%;
  height: auto;
  object-fit: contain;
  position: relative;
  z-index: 2;
  bottom: 0;
  /* Combinaison de dégradés radiaux et linéaires pour un effet plus naturel */
  -webkit-mask-image: linear-gradient(to top, transparent 10%, black 20%);
  -webkit-mask-composite: source-in;
  mask-image: linear-gradient(to top, transparent 10%, black 20%);
}

.hero__image__background {
  max-width: 110%;
  height: auto;
  object-fit: contain;
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: -5%;

  /* Masque linéaire sur les 4 bords pour effet carré */
  -webkit-mask-image: 
    linear-gradient(to top, transparent 0%, black 30%, black 70%, transparent 100%),
    linear-gradient(to left, transparent 0%, black 30%, black 70%, transparent 100%);
  -webkit-mask-composite: intersect;

  mask-image: 
    linear-gradient(to top, transparent 0%, black 10%, black 70%, transparent 100%),
    linear-gradient(to left, transparent 0%, black 30%, black 70%, transparent 100%);
  mask-composite: intersect;

  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  -webkit-mask-size: 100% 100%;

  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: 100% 100%;

  filter: blur(1px); /* Optionnel : bord plus doux */
}

/* Effet de lueur subtil pour améliorer l'ambiance */
.hero__glow-effect {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
  background: 
    radial-gradient(circle at 50% 50%, rgba(255, 170, 50, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 120, 30, 0.03) 0%, transparent 40%);
  filter: blur(20px);
}

@media screen and (max-width: 991px) {
  .hero__container {
    flex-direction: column;
    text-align: center;
  }
  
  .hero__content {
    max-width: 100%;
    margin-bottom: 40px;
  }
  
  .hero__image-container {
    justify-content: center;
    max-width: 100%;
  }
  
  .hero__title {
    font-size: 42px;
  }
}

@media screen and (max-width: 767px) {
  .hero {
    padding: 60px 0;
  }
  
  .hero__title {
    font-size: 36px;
  }
  
  .hero__description {
    font-size: 16px;
  }
}