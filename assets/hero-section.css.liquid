.hero {
    padding: 80px 0;
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .hero:before {
    content: "";
    position: absolute;
    top: 50%;
    right: 0;
    width: 50%;
    height: 80%;
    background: radial-gradient(circle, rgba(255, 170, 67, 0.15) 0%, rgba(255, 170, 67, 0.05) 40%, rgba(255, 170, 67, 0) 70%);
    transform: translateY(-50%);
    z-index: 1;
    pointer-events: none;
  }
  
  .hero__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
    gap: 40px;
    position: relative;
    z-index: 2;
  }
  
  .hero__content {
    flex: 1;
    max-width: 550px;
  }
  
  .hero__title {
    color: #fff;
    font-size: 54px;
    line-height: 1.1;
    font-weight: 700;
    margin-bottom: 20px;
  }
  
  .hero__description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 30px;
  }
  
  .hero__button {
    display: inline-block;
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
    padding: 14px 32px;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }
  
  .hero__button:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  .hero__image-container {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    max-width: 550px;
  }
  
  .hero__image {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }
  
  @media screen and (max-width: 991px) {
    .hero__container {
      flex-direction: column;
      text-align: center;
    }
    
    .hero__content {
      max-width: 100%;
      margin-bottom: 40px;
    }
    
    .hero__image-container {
      justify-content: center;
      max-width: 100%;
    }
    
    .hero__title {
      font-size: 42px;
    }
    
    .hero:before {
      width: 80%;
      height: 50%;
      top: auto;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
    }
  }
  
  @media screen and (max-width: 767px) {
    .hero {
      padding: 60px 0;
    }
    
    .hero__title {
      font-size: 36px;
    }
    
    .hero__description {
      font-size: 16px;
    }
  }