/* judgeme-pixellect.css - Style pixel art pour l'intégration simple JudgeMe */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap');

/* Conteneur principal */
.judgeme-simple {
  font-family: 'Montserrat', sans-serif;
  padding: 60px 0;
  margin-top: 40px;
  position: relative;
  color: rgba(255, 255, 255, 0.85);
  background-color: rgba(20, 20, 25, 0.5);
}

.judgeme-simple::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(240, 195, 98, 0.2), transparent);
}

.judgeme-simple__container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 24px;
}

/* En-tête */
.judgeme-simple__header {
  margin-bottom: 40px;
  text-align: center;
}

.judgeme-simple__title {
  font-size: 32px;
  font-weight: 700;
  color: #f0c362;
  margin: 0 0 16px;
  position: relative;
  display: inline-block;
}

.judgeme-simple__title::after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, rgba(240, 195, 98, 0.4), rgba(240, 195, 98, 0.8), rgba(240, 195, 98, 0.4));
  border-radius: 2px;
}

.judgeme-simple__subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  max-width: 600px;
  margin: 0 auto;
}

/* Informations de livraison */
.judgeme-simple__shipping-info {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 16px 20px;
  background-color: rgba(30, 30, 35, 0.4);
  border-radius: 8px;
  margin-bottom: 30px;
}

.judgeme-simple__shipping-icon {
  flex-shrink: 0;
  color: #f0c362;
}

.judgeme-simple__shipping-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* Garantie */
.judgeme-simple__guarantee {
  margin-top: 40px;
  text-align: center;
  padding: 16px;
  border: 1px dashed rgba(240, 195, 98, 0.3);
  border-radius: 8px;
}

.judgeme-simple__guarantee-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

.judgeme-simple__guarantee-icon {
  flex-shrink: 0;
  color: #f0c362;
}

.judgeme-simple__guarantee-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  text-align: left;
}

/* ===== PERSONNALISATION DE JUDGEME ===== */

/* Conteneur principal */
#judgeme_product_reviews {
  background-color: transparent !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  color: rgba(255, 255, 255, 0.85) !important;
  font-family: 'Montserrat', sans-serif !important;
}

/* En-tête JudgeMe */
.jdgm-rev-widg__header {
  border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
  padding-bottom: 20px !important;
  margin-bottom: 30px !important;
}

.jdgm-rev-widg__title {
  display: none !important; /* On utilise notre propre titre */
}

.jdgm-rev-widg__summary {
  display: flex !important;
  flex-wrap: wrap !important;
  align-items: center !important;
  justify-content: center !important;
  margin-bottom: 20px !important;
}

.jdgm-prev-badge__stars {
  color: rgba(255, 255, 255, 0.2) !important;
}

.jdgm-star {
  color: rgba(255, 255, 255, 0.2) !important;
  font-size: 20px !important;
}

.jdgm-star.jdgm--on,
.jdgm-star.jdgm--half {
  color: #f0c362 !important;
}

.jdgm-rev-widg__summary-text {
  margin: 0 10px !important;
  font-size: 16px !important;
  color: rgba(255, 255, 255, 0.8) !important;
}

.jdgm-rev-widg__sort-container {
  font-size: 14px !important;
  color: rgba(255, 255, 255, 0.7) !important;
}

.jdgm-sort-dropdown {
  background-color: rgba(30, 30, 35, 0.8) !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
  color: rgba(255, 255, 255, 0.9) !important;
  padding: 8px 12px !important;
  border-radius: 4px !important;
  font-size: 14px !important;
  font-family: 'Montserrat', sans-serif !important;
}

.jdgm-sort-dropdown:focus {
  outline: none !important;
  border-color: rgba(240, 195, 98, 0.4) !important;
}

.jdgm-sort-dropdown option {
  background-color: #1c1c1e !important;
}

/* Filtres */
.jdgm-rev-widg__filters-wrapper,
.jdgm-histogram {
  background-color: rgba(30, 30, 35, 0.3) !important;
  border-radius: 8px !important;
  padding: 20px !important;
  margin-bottom: 30px !important;
  border: 1px solid rgba(255, 255, 255, 0.05) !important;
}

.jdgm-histogram__row {
  margin-bottom: 10px !important;
}

.jdgm-histogram__star {
  color: rgba(255, 255, 255, 0.8) !important;
  font-size: 14px !important;
}

.jdgm-histogram__bar {
  background-color: rgba(255, 255, 255, 0.1) !important;
  height: 12px !important;
  border-radius: 6px !important;
  overflow: hidden !important;
}

.jdgm-histogram__bar-content {
  background-color: #f0c362 !important;
  height: 100% !important;
}

.jdgm-histogram__percentage {
  color: rgba(255, 255, 255, 0.7) !important;
  font-size: 14px !important;
}

/* Bouton écrire un avis */
.jdgm-write-rev-link {
  display: inline-block !important;
  padding: 12px 24px !important;
  background-color: rgba(240, 195, 98, 0.2) !important;
  color: #f0c362 !important;
  border: 1px solid rgba(240, 195, 98, 0.3) !important;
  border-radius: 4px !important;
  font-size: 14px !important;
  font-weight: 600 !important;
  text-decoration: none !important;
  transition: all 0.3s ease !important;
  margin-top: 10px !important;
}

.jdgm-write-rev-link:hover {
  background-color: rgba(240, 195, 98, 0.3) !important;
  transform: translateY(-2px) !important;
}

/* Style des avis individuels */
.jdgm-rev {
  padding: 20px !important;
  background-color: rgba(30, 30, 35, 0.3) !important;
  border-radius: 8px !important;
  margin-bottom: 20px !important;
  border: 1px solid rgba(255, 255, 255, 0.05) !important;
  transition: transform 0.3s ease, box-shadow 0.3s ease !important;
}

.jdgm-rev:hover {
  transform: translateY(-3px) !important;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2) !important;
}

.jdgm-rev__header {
  margin-bottom: 15px !important;
  border-bottom: none !important;
  padding-bottom: 0 !important;
}

.jdgm-rev__author-wrapper {
  margin-bottom: 5px !important;
}

.jdgm-rev__icon {
  width: 40px !important;
  height: 40px !important;
  background-color: rgba(240, 195, 98, 0.1) !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  overflow: hidden !important;
  font-weight: 600 !important;
  color: #f0c362 !important;
  font-size: 14px !important;
  margin-right: 10px !important;
}

.jdgm-rev__author {
  font-size: 16px !important;
  font-weight: 600 !important;
  color: rgba(255, 255, 255, 0.9) !important;
}

.jdgm-rev__timestamp {
  font-size: 14px !important;
  color: rgba(255, 255, 255, 0.6) !important;
}

.jdgm-rev__rating {
  margin: 5px 0 !important;
}

.jdgm-rev__title {
  font-size: 18px !important;
  font-weight: 600 !important;
  color: #f0c362 !important;
  margin: 10px 0 !important;
}

.jdgm-rev__body {
  font-size: 15px !important;
  line-height: 1.6 !important;
  color: rgba(255, 255, 255, 0.8) !important;
}

.jdgm-rev__body p {
  margin-bottom: 10px !important;
}

.jdgm-rev__verified-badge {
  background-color: rgba(240, 195, 98, 0.1) !important;
  color: #f0c362 !important;
  font-size: 12px !important;
  padding: 3px 8px !important;
  border-radius: 4px !important;
  margin-left: 10px !important;
}

/* Photos des avis */
.jdgm-rev__pics {
  display: flex !important;
  flex-wrap: wrap !important;
  gap: 10px !important;
  margin-top: 15px !important;
}

.jdgm-rev__pics-content {
  border-radius: 4px !important;
  overflow: hidden !important;
  border: 1px solid rgba(240, 195, 98, 0.2) !important;
}

/* Pagination */
.jdgm-paginate {
  text-align: center !important;
  margin-top: 30px !important;
}

.jdgm-paginate__page {
  display: inline-flex !important;
  align-items: center !important;
  justify-content: center !important;
  width: 36px !important;
  height: 36px !important;
  background-color: rgba(255, 255, 255, 0.1) !important;
  color: rgba(255, 255, 255, 0.7) !important;
  border-radius: 4px !important;
  margin: 0 5px !important;
  font-size: 14px !important;
  border: none !important;
  transition: all 0.3s ease !important;
}

.jdgm-paginate__page:hover {
  background-color: rgba(255, 255, 255, 0.2) !important;
}

.jdgm-paginate__page.jdgm-paginate__page--current {
  background-color: rgba(240, 195, 98, 0.2) !important;
  color: #f0c362 !important;
  border: 1px solid rgba(240, 195, 98, 0.3) !important;
}

/* Formulaire d'avis */
.jdgm-form-wrapper {
  margin-top: 40px !important;
  background-color: rgba(30, 30, 35, 0.3) !important;
  padding: 30px !important;
  border-radius: 8px !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
}

.jdgm-form__title {
  font-size: 24px !important;
  font-weight: 600 !important;
  color: #f0c362 !important;
  margin-bottom: 20px !important;
  text-align: center !important;
}

.jdgm-form__name-fieldset,
.jdgm-form__email-fieldset,
.jdgm-form__title-fieldset,
.jdgm-form__body-fieldset {
  margin-bottom: 20px !important;
}

.jdgm-form__label {
  font-size: 14px !important;
  font-weight: 600 !important;
  color: rgba(255, 255, 255, 0.9) !important;
  margin-bottom: 8px !important;
  display: block !important;
}

.jdgm-form__input,
.jdgm-form__textarea {
  width: 100% !important;
  padding: 12px 16px !important;
  background-color: rgba(255, 255, 255, 0.05) !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
  border-radius: 4px !important;
  color: #fff !important;
  font-size: 14px !important;
  font-family: 'Montserrat', sans-serif !important;
}

.jdgm-form__input:focus,
.jdgm-form__textarea:focus {
  outline: none !important;
  border-color: rgba(240, 195, 98, 0.4) !important;
  background-color: rgba(255, 255, 255, 0.08) !important;
}

.jdgm-form__textarea {
  min-height: 120px !important;
}

.jdgm-form__submit-btn {
  padding: 12px 24px !important;
  background-color: rgba(240, 195, 98, 0.8) !important;
  color: #0c0d13 !important;
  border: none !important;
  border-radius: 4px !important;
  font-size: 16px !important;
  font-weight: 600 !important;
  cursor: pointer !important;
  transition: all 0.3s ease !important;
  font-family: 'Montserrat', sans-serif !important;
}

.jdgm-form__submit-btn:hover {
  background-color: #f0c362 !important;
  transform: translateY(-2px) !important;
}

/* Message vide */
.jdgm-no-reviews {
  background-color: rgba(30, 30, 35, 0.3) !important;
  padding: 30px !important;
  border-radius: 8px !important;
  text-align: center !important;
  color: rgba(255, 255, 255, 0.7) !important;
  font-size: 16px !important;
  margin: 20px 0 !important;
}

/* Responsive */
@media screen and (max-width: 767px) {
  .judgeme-simple {
    padding: 40px 0;
  }
  
  .judgeme-simple__title {
    font-size: 24px;
  }
  
  .judgeme-simple__shipping-info {
    flex-direction: column;
    text-align: center;
  }
  
  .judgeme-simple__guarantee-content {
    flex-direction: column;
    text-align: center;
  }
  
  .jdgm-rev-widg__summary {
    flex-direction: column !important;
  }
  
  .jdgm-rev__header {
    flex-direction: column !important;
  }
  
  .jdgm-rev__icon {
    margin-bottom: 10px !important;
    margin-right: 0 !important;
  }
  
  .jdgm-form-wrapper {
    padding: 20px !important;
  }
  
  .jdgm-form__title {
    font-size: 20px !important;
  }
}
