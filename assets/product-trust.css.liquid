/* product-trust.css - Enhanced trust badges for dropshipping product template */

/* JudgeMe Stars Badge */
.product__reviews-badge {
  margin-bottom: 15px;
}

/* Trust badges above add to cart button */
.product__trust-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-bottom: 20px;
  padding: 15px;
  background-color: rgba(30, 30, 35, 0.3);
  border-radius: 8px;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.product__trust-badge {
  flex: 1;
  min-width: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  text-align: center;
  border-radius: 6px;
  background-color: rgba(20, 20, 25, 0.5);
  transition: transform 0.3s ease;
}

.product__trust-badge:hover {
  transform: translateY(-3px);
}

.product__trust-icon {
  width: 36px;
  height: 36px;
  margin-bottom: 8px;
  color: #f0c362;
  opacity: 0.9;
}

.product__trust-text {
  font-size: 12px;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 0.2px;
}

/* Payment methods badges */
.product__payment-badge {
  margin: 5px;
  opacity: 0.9;
  transition: opacity 0.3s ease;
}

.product__payment-badge:hover {
  opacity: 1;
}

/* Trust section below benefits */
.product__trust {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid rgba(60, 60, 65, 0.8);
}

.product__trust-title {
  font-size: 16px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  margin: 0 0 15px 0;
  text-align: center;
}

/* Policy links */
.product__policy-links {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
}

.product__policy-link {
  display: flex;
  align-items: center;
  font-size: 13px;
  color: rgba(255, 255, 255, 0.7);
  text-decoration: none;
  transition: color 0.3s ease;
}

.product__policy-link:hover {
  color: #f0c362;
}

.product__policy-icon {
  display: flex;
  margin-right: 6px;
  color: #f0c362;
}

/* Enhanced benefits section */
.product__benefits {
  margin-top: 32px;
  padding-top: 24px;
  border-top: 1px solid rgba(60, 60, 65, 0.8);
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

.product__benefit-item {
  display: flex;
  gap: 16px;
  padding: 16px;
  background-color: rgba(30, 30, 35, 0.3);
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.product__benefit-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  border-color: rgba(240, 195, 98, 0.2);
}

.product__benefit-icon {
  flex-shrink: 0;
  color: #f0c362;
}

.product__benefit-title {
  font-size: 16px;
  font-weight: 600;
  color: #f0c362;
  margin: 0 0 8px 0;
}

.product__benefit-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.7);
  margin: 0;
  line-height: 1.5;
}

/* Responsive adjustments */
@media screen and (max-width: 767px) {
  .product__trust-badges {
    grid-template-columns: 1fr 1fr;
    padding: 10px;
  }
  
  .product__trust-badge {
    padding: 8px;
  }
  
  .product__trust-icon {
    width: 28px;
    height: 28px;
    margin-bottom: 5px;
  }
  
  .product__trust-text {
    font-size: 11px;
  }
  
  .product__policy-links {
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }
  
  .product__benefit-item {
    padding: 12px;
  }
  
  .product__benefit-icon {
    width: 30px;
  }
  
  .product__benefit-title {
    font-size: 15px;
  }
  
  .product__benefit-text {
    font-size: 13px;
  }
}